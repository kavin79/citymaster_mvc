@model citymaster.Models.citymaster

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.cityname, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.cityname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cityname, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.intstateid, "State", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("intstateid", (SelectList)ViewBag.StateList, "Select State", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.intstateid, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
